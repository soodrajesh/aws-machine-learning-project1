# CloudWatch Events Policy
resource "aws_iam_role_policy" "cloudwatch_events_policy" {
  name = "${local.name_prefix}-cloudwatch-events-policy"
  role = aws_iam_role.cloudwatch_events_role.id

  policy = jsonencode({
